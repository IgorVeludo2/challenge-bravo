generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Coins {
    id         String   @id @default(uuid())
    code       String   @unique
    name       String
    high       String
    low        String
    type       CoinType @default(FIDUCIARY)
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    @@map("coins")
}

enum CoinType {
    FIDUCIARY
    FICTITIOUS
    CRYPTO
}
